{
  "name": "starclad-privacy-swap-backend",
  "version": "1.0.0",
  "description": "Production privacy-preserving atomic swap backend",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "node dist/index.js start",
    "dev": "ts-node modules/index.ts start",
    "build": "tsc",
    "encrypt-env": "ts-node modules/index.ts encrypt-env",
    "decrypt-env": "ts-node modules/index.ts decrypt-env",
    "init": "ts-node modules/index.ts init",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint modules/**/*.ts --fix",
    "clean": "rm -rf dist",
    "prestart": "npm run build"
  },
  "keywords": [
    "privacy",
    "atomic-swap",
    "starknet",
    "bitcoin",
    "zero-knowledge",
    "poseidon",
    "https",
    "production"
  ],
  "author": "StarClad Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "starknet": "^6.0.0",
    "bitcoinjs-lib": "^6.1.5",
    "ecpair": "^2.1.0",
    "tiny-secp256k1": "^2.2.3",
    "ioredis": "^5.3.2",
    "circomlibjs": "^0.1.7",
    "merkletreejs": "^0.3.11",
    "argon2": "^0.31.2",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.9",
    "@types/compression": "^1.7.5",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.10",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
